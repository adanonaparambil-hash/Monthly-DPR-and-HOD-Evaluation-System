/* HOD and PM Approval Cards */
.hod-approval-card {
  border: 2px solid #007bff;
  background: linear-gradient(135deg, #f8f9ff 0%, #e3f2fd 100%);
  position: relative;
}

.pm-approval-card {
  border: 2px solid #28a745;
  background: linear-gradient(135deg, #f8fff9 0%, #e8f5e8 100%);
  position: relative;
}

.hod-approval-actions,
.pm-approval-actions {
  margin-top: 20px;
  padding: 20px;
  background: rgba(0, 123, 255, 0.05);
  border-radius: 8px;
  border: 1px solid rgba(0, 123, 255, 0.2);
}

.pm-approval-actions {
  background: rgba(40, 167, 69, 0.05);
  border: 1px solid rgba(40, 167, 69, 0.2);
}

.hod-approval-form,
.pm-approval-form {
  display: flex;
  flex-direction: column;
  gap: 20px;
  width: 100%;
}

.approval-inputs {
  display: flex;
  flex-direction: column;
  gap: 20px;
  align-items: stretch;
}

.approval-inputs .form-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.approval-inputs label {
  font-weight: 600;
  color: #2c3e50;
  font-size: 14px;
}

.approval-inputs input,
.approval-inputs textarea {
  padding: 12px;
  border: 2px solid #e9ecef;
  border-radius: 6px;
  font-size: 14px;
  transition: border-color 0.3s ease;
}

.approval-inputs input:focus,
.approval-inputs textarea:focus {
  outline: none;
  border-color: #007bff;
  box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
}

.approval-buttons {
  display: flex;
  gap: 15px;
  justify-content: flex-end;
}

.approval-buttons .btn-approve,
.approval-buttons .btn-reject {
  padding: 12px 24px;
  border: none;
  border-radius: 6px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  gap: 8px;
}

.approval-buttons .btn-approve {
  background: #28a745;
  color: white;
}

.approval-buttons .btn-approve:hover {
  background: #218838;
  transform: translateY(-1px);
}

.approval-buttons .btn-reject {
  background: #dc3545;
  color: white;
}

.approval-buttons .btn-reject:hover {
  background: #c82333;
  transform: translateY(-1px);
}

.dept-approval {
  background: rgba(0, 0, 0, 0.02);
  padding: 16px;
  border-radius: 8px;
  margin-top: 16px;
}

.approval-info p {
  margin: 4px 0;
  font-size: 12px;
  color: var(--text-secondary);
}

.demo-approval-actions {
  display: flex;
  gap: 12px;
  margin-top: 16px;
  padding-top: 16px;
  border-top: 1px solid var(--border-color);
}

/* Final Review */
.review-summary {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 20px;
  margin-bottom: 24px;
}

.summary-card {
  background: var(--background-secondary);
  border: 1px solid var(--border-color);
  border-radius: 12px;
  padding: 24px;
}

.summary-card h4 {
  margin: 0 0 16px 0;
  font-size: 16px;
  font-weight: 600;
  color: var(--primary-color);
  padding-bottom: 8px;
  border-bottom: 1px solid var(--border-color);
}

.summary-grid {
  display: grid;
  gap: 8px;
}

.summary-grid>div {
  font-size: 14px;
  color: var(--text-primary);
}

.responsibilities-summary {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.responsibility-summary {
  padding: 12px;
  background: var(--background-primary);
  border-radius: 8px;
  border: 1px solid var(--border-color);
}

.responsibility-summary strong {
  color: var(--primary-color);
  font-size: 14px;
}

.responsibility-summary p {
  margin: 4px 0 0 0;
  font-size: 12px;
  color: var(--text-secondary);
}

/* Declarations */
.declarations {
  margin-top: 16px;
  background: var(--background-secondary);
  border: 1px solid var(--border-color);
  border-radius: 12px;
  padding: 20px;
}

.declarations h4 {
  margin: 0 0 12px 0;
  font-size: 16px;
  font-weight: 600;
  color: var(--primary-color);
}

.declaration-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-bottom: 12px;
}

.declaration-notes {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.declaration-notes .note {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 10px 12px;
  border-radius: 8px;
  font-size: 13px;
}

.declaration-notes .note.info {
  background: rgba(59, 130, 246, 0.08);
  color: #2563eb;
  border: 1px solid rgba(59, 130, 246, 0.2);
}

.declaration-notes .note.success {
  background: rgba(34, 197, 94, 0.08);
  color: #059669;
  border: 1px solid rgba(34, 197, 94, 0.2);
