/* FIXED LAYOUT FOR CURRENT APPROVAL FLOW */

/* Flow Card - Enhanced */
.flow-card {
  background: #ffffff;
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  border: 1px solid #e2e8f0;
  width: 100%;
  box-sizing: border-box;
}

.flow-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  padding-bottom: 12px;
  border-bottom: 1px solid #edf2f7;
}

.flow-header i {
  color: #4299e1;
  font-size: 16px;
}

.flow-header h4 {
  margin: 0;
  font-size: 16px;
  font-weight: 700;
  color: #1a202c;
  flex: 1;
  margin-left: 8px;
}

/* Timeline Layout - Fixed */
.flow-timeline {
  display: flex;
  flex-direction: column;
  gap: 12px;
  position: relative;
  width: 100%;
}

.timeline-step {
  display: flex;
  gap: 10px;
  position: relative;
  width: 100%;
  align-items: flex-start;
}

.timeline-indicator {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-shrink: 0;
  width: 28px;
  position: relative;
}

.indicator-dot {
  width: 28px;
  height: 28px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f7fafc;
  border: 2px solid #e2e8f0;
  z-index: 2;
  transition: all 0.3s ease;
  font-size: 12px;
  flex-shrink: 0;
}

.indicator-line {
  flex: 1;
  width: 2px;
  background: #e2e8f0;
  margin: 4px 0;
  z-index: 1;
  min-height: 30px;
}

/* Status Colors */
.timeline-step.approved .indicator-dot {
  background: #f0fff4;
  border-color: #48bb78;
  color: #48bb78;
}

.timeline-step.approved .indicator-line {
  background: #48bb78;
}

.timeline-step.rejected .indicator-dot {
  background: #fff5f5;
  border-color: #f56565;
  color: #f56565;
}

.timeline-step.in_progress .indicator-dot {
  background: #fffaf0;
  border-color: #ed8936;
  color: #ed8936;
}

.timeline-step.pending .indicator-dot {
  background: #f8fafc;
  border-color: #cbd5e0;
  color: #718096;
}

/* Step Card - Compact Layout */
.step-card-container {
  flex: 1;
  width: 100%;
  min-width: 0;
}

.step-card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8px;
  gap: 8px;
  width: 100%;
}

.step-title {
  font-size: 13px;
  font-weight: 700;
  color: #1a202c;
  margin: 0;
  flex: 1;
  line-height: 1.2;
  word-wrap: break-word;
  min-width: 0;
}

/* Status Badge - Compact */
.status-badge {
  display: inline-block;
  font-size: 9px;
  font-weight: 700;
  padding: 3px 6px;
  border-radius: 12px;
  text-transform: uppercase;
  letter-spacing: 0.3px;
  white-space: nowrap;
  border: 1px solid;
  min-width: 50px;
  text-align: center;
  flex-shrink: 0;
}

.status-badge.status-approved {
  background: #48bb78;
  color: white;
  border-color: #38a169;
}

.status-badge.status-rejected {
  background: #f56565;
  color: white;
  border-color: #e53e3e;
}

.status-badge.status-in_progress {
  background: #ed8936;
  color: white;
  border-color: #dd6b20;
}

.status-badge.status-pending {
  background: #718096;
  color: white;
  border-color: #4a5568;
}

/* Approver Card - Compact */
.approver-card {
  display: flex;
  gap: 8px;
  background: #f8fafc;
  border: 1px solid #e2e8f0;
  border-radius: 6px;
  padding: 8px;
  width: 100%;
  box-sizing: border-box;
  align-items: flex-start;
  margin-top: 4px;
}

.approver-avatar {
  position: relative;
  width: 32px;
  height: 32px;
  flex-shrink: 0;
}

.approver-image,
.avatar-icon {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
  border: 1px solid white;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}

.avatar-icon {
  background: #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #94a3b8;
  font-size: 14px;
}

.status-mini-dot {
  position: absolute;
  bottom: -1px;
  right: -1px;
  width: 10px;
  height: 10px;
  border-radius: 50%;
  border: 1px solid white;
}

.status-mini-dot.dot-approved {
  background: #48bb78;
}

.status-mini-dot.dot-rejected {
  background: #f56565;
}

.status-mini-dot.dot-in_progress {
  background: #ed8936;
}

.status-mini-dot.dot-pending {
  background: #718096;
}

.approver-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 2px;
  min-width: 0;
}

.approver-name {
  font-size: 12px;
  font-weight: 700;
  color: #1a202c;
  margin: 0;
  line-height: 1.2;
  word-wrap: break-word;
}

.approver-details-list {
  display: flex;
  flex-direction: column;
  gap: 1px;
}

.detail-item {
  display: flex;
  align-items: center;
  gap: 4px;
  font-size: 10px;
  color: #4a5568;
  line-height: 1.2;
}

.detail-item i {
  width: 10px;
  color: #718096;
  font-size: 8px;
  flex-shrink: 0;
}

.detail-item span {
  word-wrap: break-word;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
}

.approval-date {
  display: flex;
  align-items: center;
  gap: 3px;
  font-size: 9px;
  color: #38a169;
  font-weight: 600;
  margin-top: 2px;
}

.approval-date i {
  color: #38a169;
  font-size: 8px;
}

/* Mobile Responsive - Updated */
@media (max-width: 768px) {
  .flow-card {
    padding: 16px;
  }
  
  .step-title {
    font-size: 12px;
  }
  
  .status-badge {
    font-size: 8px;
    padding: 2px 4px;
    min-width: 40px;
  }
  
  .approver-name {
    font-size: 11px;
  }
  
  .detail-item {
    font-size: 9px;
  }
}

@media (max-width: 480px) {
  .flow-card {
    padding: 12px;
  }
  
  .step-card-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 4px;
  }
  
  .status-badge {
    align-self: flex-end;
  }
}